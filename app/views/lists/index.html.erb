<div class="container">
  <h1>ALL LISTS</h1>

<%= simple_form_for :search, url: lists_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>


  <button type="button" class="btn btn-primary"><%= link_to "Nouvelle List", new_list_path %></button>
      <ul class="list-unstyled">
        <div class="card-global">
          <% @lists.each do |list| %>
            <div class="card">
            <div class="card-category">
              <li><%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill, style:"background-image" %>
                <h3><%= link_to list.name, list_path(list) %></h3>
              <p><%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe, list_path(list), data: { turbo_method: :delete, turbo_confirm: "Etes vous sÃ»r?" } %></p>
              </li>
            </div>
            </div>
          <% end %>
        </div>
      </ul>
</div>
